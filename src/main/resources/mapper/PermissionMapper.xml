<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.realphago.springbootshiro.mapper.PermissionMapper">

    <!--  查询  -->
    <select id="findList" parameterType="pageBean" resultType="permission">
        select *
        from tab_permission limit #{pageStart},#{pageSize}
    </select>
    <select id="findElementById" resultType="permission">
        select *
        from tab_permission
        where id = #{id}
    </select>
    <select id="findTotalCount" resultType="int">
        select count(*)
        from tab_permission
    </select>
    <select id="findElementByName" resultType="permission">
        select *
        from tab_permission
        where name = #{name}
    </select>
    <select id="findAll" resultType="permission">
        select *
        from tab_permission
        <where>
            <if test="name != null">
                name like concat('', #{name}, '%')
            </if>
        </where>
    </select>
    <!--  查询  -->

    <!-- 添加   -->
    <insert id="create" parameterType="permission">
        insert into tab_permission(id, permissionNum, name, url)
        values(#{id}, #{permissionNum}, #{name}, #{url})
    </insert>
    <!-- 添加   -->

    <!-- 授权   -->
    <insert id="authorize">
        insert into tab_role_permission(roleNum, permissionNum)
        values(#{role.roleNum}, #{permission.permissionNum})
    </insert>
    <!-- 授权   -->

    <!-- 删除   -->
    <delete id="delete" parameterType="permission">
        delete from tab_permission
        where id = #{id}
    </delete>
    <!-- 删除   -->

    <!-- 权限撤销   -->
    <delete id="deAuthorizeByRoleNum">
        delete from tab_role_permission
        where roleNum = #{roleNum}
    </delete>
    <delete id="deAuthorizeByPermissionNum">
        delete from tab_role_permission
        where permissionNum = #{permissionNum}
    </delete>
    <!-- 权限撤销   -->

    <!--  修改  -->
    <update id="update" parameterType="permission">
        update tab_permission
        set name =#{name},  url = #{url}, gmt_modified = #{gmt_modified}
        where permissionNum = #{permissionNum}
    </update>
    <!--  修改  -->

    <!-- resultMap   -->

    <!-- resultMap   -->

    <!--  二次查询  -->

    <!--  二次查询  -->

</mapper>